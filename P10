class Solution:
    def minJumps(self, arr):
        n = len(arr)
        
        # If only one element, no jumps needed
        if n <= 1:
            return 0
        
        # If first element is 0, cannot move
        if arr[0] == 0:
            return -1
        
        maxReach = arr[0]
        steps = arr[0]
        jumps = 1
        
        for i in range(1, n):
            
            # If we reached last index
            if i == n - 1:
                return jumps
            
            # Update maximum reachable index
            maxReach = max(maxReach, i + arr[i])
            
            # Use a step
            steps -= 1
            
            # If no steps left
            if steps == 0:
                jumps += 1
                
                # If current index beyond reachable range
                if i >= maxReach:
                    return -1
                
                # Reset steps
                steps = maxReach - i
        
        return -1
