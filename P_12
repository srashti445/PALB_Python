class Solution:
    def minJumps(self, arr):
        n = len(arr)
        
        # If only one element
        if n == 1:
            return 0
        
        # If first element is 0, cannot move
        if arr[0] == 0:
            return -1
        
        jumps = 0
        current_end = 0
        farthest = 0
        
        for i in range(n - 1):
            
            # Update farthest reachable
            farthest = max(farthest, i + arr[i])
            
            # If stuck
            if i >= farthest:
                return -1
            
            # If we reached boundary of current jump
            if i == current_end:
                jumps += 1
                current_end = farthest
                
                # If already can reach end
                if current_end >= n - 1:
                    return jumps
        
        return -1
